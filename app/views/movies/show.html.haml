.container
  %h1.show-title= "#{@movie.title}"
  .div
    %pservice= "Service: " + "#{@movie.service}"
    %p.genre= "Genre: " + "#{@movie.genre}"
    =link_to "Edit #{@movie.title}", edit_movie_path, class: "btn btn-warning"
    =link_to "Delete #{@movie.title}", movie_path(@movie), method: :delete, class: "btn btn-danger"
  %br
  =link_to "View All Movies", root_path, class: "btn btn-info"
